@{
    ViewData["Title"] = "LeavePro - Modern Leave Management";
}

<div class="hero-section">
    <!-- ✅ LeavePro in Exact Top Left Corner - No Space -->
    <div class="position-absolute" style="top: 0; left: 0; z-index: 1000; padding: 15px;">
        <h1 style="font-size: 2.5rem; font-weight: 700; color: #f1f5f9; margin: 0; text-shadow: 2px 2px 4px rgba(0,0,0,0.5);">
            <i class="fas fa-calendar-alt me-2"></i>LeavePro
        </h1>
    </div>

    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">Streamline Your Leave Management</h1>
            <p class="hero-subtitle">Modern, intuitive, and efficient leave management system for your organization</p>

            @if (Context.Session.GetString("UserId") == null)
            {
                <a href="#" class="btn-hero me-3" data-bs-toggle="modal" data-bs-target="#loginModal">
                    <i class="fas fa-rocket me-2"></i>Get Started
                </a>
            }
            else
            {
                <a href="@Url.Action(Context.Session.GetString("Role"), "Dashboard")" class="btn-hero me-3">
                    <i class="fas fa-tachometer-alt me-2"></i>Go to Dashboard
                </a>
            }

            <a href="#how-it-works" class="btn-hero">
                <i class="fas fa-info-circle me-2"></i>Learn More
            </a>
        </div>
    </div>
</div>

<!-- How It Works Section -->
<section id="how-it-works" class="how-it-works">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-4 fw-bold mb-3">How It Works</h2>
            <p class="lead text-muted">Simple three-step process for efficient leave management</p>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="step-card">
                    <div class="step-number">1</div>
                    <div class="step-icon">
                        <i class="fas fa-edit"></i>
                    </div>
                    <h4>Apply for Leave</h4>
                    <p class="text-muted">Employees easily submit leave requests with all necessary details through an intuitive interface.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="step-card">
                    <div class="step-number">2</div>
                    <div class="step-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <h4>Manager Approval</h4>
                    <p class="text-muted">Managers receive instant notifications and can approve or reject requests with a single click.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="step-card">
                    <div class="step-number">3</div>
                    <div class="step-icon">
                        <i class="fas fa-chart-bar"></i>
                    </div>
                    <h4>Track & Analyze</h4>
                    <p class="text-muted">Comprehensive dashboards and reports help track leave patterns and optimize workforce planning.</p>
                </div>
            </div>
        </div>
    </div>
</section>