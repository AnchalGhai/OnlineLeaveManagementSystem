@model List<LeaveManagementSystem.Models.Entities.LeaveApplication>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Manager Leave Requests";
}

<div class="dashboard-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-user-tie me-2"></i>Manager Leave Requests</h2>
        <a href="@Url.Action("Admin", "Dashboard")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
        </a>
    </div>

    <!-- Alerts -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistics -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card stat-card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">Pending Requests</h6>
                            <h3 class="mb-0">@Model.Count</h3>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card stat-card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">Total Days Requested</h6>
                            <h3 class="mb-0">@Model.Sum(l => l.TotalDays)</h3>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-calendar-alt fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card stat-card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2">Managers</h6>
                            <h3 class="mb-0">@Model.Select(l => l.UserId).Distinct().Count()</h3>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Manager Leaves Table -->
    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Manager</th>
                                <th>Department</th>
                                <th>Leave Type</th>
                                <th>Duration</th>
                                <th>Total Days</th>
                                <th>Applied On</th>
                                <th>Reason</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var leave in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-placeholder bg-primary text-white rounded-circle me-2" style="width: 36px; height: 36px; line-height: 36px; text-align: center;">
                                                @leave.User.FullName.Substring(0, 1).ToUpper()
                                            </div>
                                            <div>
                                                <strong>@leave.User.FullName</strong><br />
                                                <small class="text-muted">@leave.User.Email</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@leave.User.Department?.Name</td>
                                    <td>
                                        <span class="badge bg-secondary">@leave.LeaveType?.Name</span>
                                    </td>
                                    <td>
                                        <small>@leave.StartDate.ToString("dd-MMM-yyyy")</small><br />
                                        <small>to</small><br />
                                        <small>@leave.EndDate.ToString("dd-MMM-yyyy")</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@leave.TotalDays day(s)</span>
                                    </td>
                                    <td>@leave.AppliedOn.ToString("dd-MMM-yyyy hh:mm tt")</td>
                                    <td>
                                        @if (leave.Reason.Length > 50)
                                        {
                                            <span title="@leave.Reason">@leave.Reason.Substring(0, 50)...</span>
                                        }
                                        else
                                        {
                                            @leave.Reason
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("ViewManagerLeaveRequest", "Dashboard", new { id = leave.LeaveId })"
                                               class="btn btn-sm btn-outline-primary" title="View Details">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                            @if (leave.Status == "Pending")
                                            {
                                                <button type="button" class="btn btn-sm btn-outline-success"
                                                        title="Approve"
                                                        onclick="showApproveModal(@leave.LeaveId)">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                                <button type="button" class="btn btn-sm btn-outline-danger"
                                                        title="Reject"
                                                        onclick="showRejectModal(@leave.LeaveId)">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-user-check fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No pending manager leave requests</h5>
                    <p class="text-muted">All manager leave requests have been processed.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Approve Modal -->
<div class="modal fade" id="approveModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Approve Leave Request</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="approveForm" method="post" action="@Url.Action("ApproveManagerLeave", "Dashboard")">
                @Html.AntiForgeryToken()
                <input type="hidden" id="approveLeaveId" name="id" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="approveComments" class="form-label">Comments (Optional)</label>
                        <textarea class="form-control" id="approveComments" name="comments" rows="3"
                                  placeholder="Add any comments for the manager..."></textarea>
                    </div>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        This will deduct leave balance from the manager's account.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Approve Leave</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reject Leave Request</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="rejectForm" method="post" action="@Url.Action("RejectManagerLeave", "Dashboard")">
                @Html.AntiForgeryToken()
                <input type="hidden" id="rejectLeaveId" name="id" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="rejectComments" class="form-label">Comments (Required)</label>
                        <textarea class="form-control" id="rejectComments" name="comments" rows="3"
                                  placeholder="Reason for rejecting the leave request..." required></textarea>
                    </div>
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        This will notify the manager that their leave request has been rejected.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject Leave</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.table').DataTable({
                "order": [[5, "desc"]], // Sort by AppliedOn descending
                "pageLength": 10,
                "language": {
                    "emptyTable": "No leave requests found",
                    "info": "Showing _START_ to _END_ of _TOTAL_ requests",
                    "infoEmpty": "Showing 0 to 0 of 0 requests",
                    "infoFiltered": "(filtered from _MAX_ total requests)",
                    "lengthMenu": "Show _MENU_ requests",
                    "search": "Search:",
                    "zeroRecords": "No matching leave requests found"
                }
            });
        });

        function showApproveModal(leaveId) {
            $('#approveLeaveId').val(leaveId);
            $('#approveComments').val('');
            $('#approveModal').modal('show');
        }

        function showRejectModal(leaveId) {
            $('#rejectLeaveId').val(leaveId);
            $('#rejectComments').val('');
            $('#rejectModal').modal('show');
        }

        $('#approveForm').submit(function(e) {
            if (!confirm('Are you sure you want to approve this leave request?')) {
                e.preventDefault();
                return false;
            }
        });

        $('#rejectForm').submit(function(e) {
            if (!confirm('Are you sure you want to reject this leave request?')) {
                e.preventDefault();
                return false;
            }
        });
    </script>
}
